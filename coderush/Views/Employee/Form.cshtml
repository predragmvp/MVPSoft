@model Employee
@{
    string controller = this.ViewContext.RouteData.Values["controller"].ToString();
    string action = this.ViewContext.RouteData.Values["action"].ToString();
    string modelName = "Employee";
    ViewData["Title"] = modelName + " Form";
}

<!-- Content Start -->
<div class="content-wrapper">
    <!-- Heading Start -->
    <section class="heading">
        <h2 class="mb-2"><i class="mdi mdi-account-card-details"></i> @modelName</h2>
        <div class="titles">
            @await Html.PartialAsync(PartialView.StatusMessage, TempData[StaticString.StatusMessage])
        </div>
    </section><!-- Heading End -->
    <div class="row">
        <div class="col-12">
            <form asp-controller="@controller" asp-action="Submit@(action)" method="post">

                <article class="card mb-4">
                    <div class="card-header">
                        <h4 class="card-title mb-0">Create or Edit Existing @modelName</h4>
                    </div>
                </article>

                <article class="card mb-4">
                    <div class="card-header">
                        <h4 class="card-title mb-0">Basic Info</h4>
                    </div>
                    <div class="card-body">
                        <input type="hidden" asp-for="EmployeeId" />
                        <div class="row">
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="FirstName"></label>
                                    <div class="input-group">
                                        <input asp-for="FirstName" class="form-control" />
                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                    </div>
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="LastName"></label>
                                    <div class="input-group">
                                        <input asp-for="LastName" class="form-control" />
                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                    </div>
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="Gender"></label>
                                    <div class="input-group">
                                        <select asp-for="Gender" class="select2 form-control" asp-items="ViewBag.Gender"></select>
                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                    </div>
                                    <span asp-validation-for="Gender" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="DateOfBirth"></label>
                                    <div class="input-group">
                                        <input type="text" id="DateOfBirth" name="DateOfBirth" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")" class="datepicker form-control" data-val="true" data-val-required="The DateOfBirth field is required.">
                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                    </div>
                                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="PlaceOfBirth"></label>
                                    <div class="input-group">
                                        <input asp-for="PlaceOfBirth" class="form-control" />
                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                    </div>
                                    <span asp-validation-for="PlaceOfBirth" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="MaritalStatus"></label>
                                    <div class="input-group">
                                        <select asp-for="MaritalStatus" class="select2 form-control" asp-items="ViewBag.MaritalStatus"></select>
                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                    </div>
                                    <span asp-validation-for="MaritalStatus" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="Email"></label>
                                    <div class="input-group">
                                        <input asp-for="Email" class="form-control" />
                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="Phone"></label>
                                    <div class="input-group">
                                        <input asp-for="Phone" class="form-control" />
                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                    </div>
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Address1"></label>
                            <div class="input-group">
                                <input asp-for="Address1" class="form-control" />
                                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                            </div>
                            <span asp-validation-for="Address1" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Address2"></label>
                            <div class="input-group">
                                <input asp-for="Address2" class="form-control" />
                                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                            </div>
                            <span asp-validation-for="Address2" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="City"></label>
                                    <div class="input-group">
                                        <input asp-for="City" class="form-control" />
                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                    </div>
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="StateProvince"></label>
                                    <div class="input-group">
                                        <input asp-for="StateProvince" class="form-control" />
                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                    </div>
                                    <span asp-validation-for="StateProvince" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="ZipCode"></label>
                                    <div class="input-group">
                                        <input asp-for="ZipCode" class="form-control" />
                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                    </div>
                                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        
                        
                        
                        <div class="form-group">
                            <label asp-for="Country"></label>
                            <div class="input-group">
                                <input asp-for="Country" class="form-control" />
                                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                            </div>
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>
                    </div>

                </article>

                <article class="card mb-4">
                    <div class="card-header">
                        <h4 class="card-title mb-0">Staff Info</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="EmployeeIDNumber"></label>
                            <div class="input-group">
                                <input asp-for="EmployeeIDNumber" class="form-control" />
                                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                            </div>
                            <span asp-validation-for="EmployeeIDNumber" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="DesignationId"></label>
                                    <div class="input-group">
                                        <select asp-for="DesignationId" class="select2 form-control" asp-items="ViewBag.Designation"></select>
                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                    </div>
                                    <span asp-validation-for="DesignationId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="DepartmentId"></label>
                                    <div class="input-group">
                                        <select asp-for="DepartmentId" class="select2 form-control" asp-items="ViewBag.Department"></select>
                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                    </div>
                                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="SupervisorId"></label>
                                    <div class="input-group">
                                        <select asp-for="SupervisorId" class="select2 form-control" asp-items="ViewBag.Supervisor"></select>
                                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                    </div>
                                    <span asp-validation-for="SupervisorId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        
                        
                        <div class="form-group">
                            <label asp-for="JoiningDate"></label>
                            <div class="input-group">
                                <input type="text" id="JoiningDate" name="JoiningDate" value="@Model.JoiningDate.ToString("yyyy-MM-dd")" class="datepicker form-control" data-val="true" data-val-required="The JoiningDate field is required.">
                                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                            </div>
                            <span asp-validation-for="JoiningDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LeavingDate"></label>
                            <div class="input-group">
                                <input type="text" id="LeavingDate" name="LeavingDate" value="@(Model.LeavingDate.HasValue ? Model.LeavingDate.Value.ToString("yyyy-MM-dd") : "")" class="datepicker form-control">
                                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                            </div>
                        </div>
                        
                    </div>
                </article>

                <article class="card mb-4">
                    <div class="card-header">
                        <h4 class="card-title mb-0">Salary Info</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="BasicSalary"></label>
                            <div class="input-group">
                                <input asp-for="BasicSalary" class="form-control" />
                                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                            </div>
                            <span asp-validation-for="BasicSalary" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UnpaidLeavePerDay"></label>
                            <div class="input-group">
                                <input asp-for="UnpaidLeavePerDay" class="form-control" />
                                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                            </div>
                            <span asp-validation-for="UnpaidLeavePerDay" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="BenefitTemplateId"></label>
                            <div class="input-group">
                                <select asp-for="BenefitTemplateId" class="select2 form-control" asp-items="ViewBag.BenefitTemplate"></select>
                                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                            </div>
                            <span asp-validation-for="BenefitTemplateId" class="text-danger"></span>
                        </div>
                    </div>
                </article>

                <article class="card mb-4">
                    <div class="card-header">
                        <h4 class="card-title mb-0">Bank Account Info</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="AccountTitle"></label>
                            <div class="input-group">
                                <input asp-for="AccountTitle" class="form-control" />
                                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                            </div>
                            <span asp-validation-for="AccountTitle" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="BankName"></label>
                            <div class="input-group">
                                <input asp-for="BankName" class="form-control" />
                                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                            </div>
                            <span asp-validation-for="BankName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="AccountNumber"></label>
                            <div class="input-group">
                                <input asp-for="AccountNumber" class="form-control" />
                                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                            </div>
                            <span asp-validation-for="AccountNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SwiftCode"></label>
                            <div class="input-group">
                                <input asp-for="SwiftCode" class="form-control" />
                                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                            </div>
                            <span asp-validation-for="SwiftCode" class="text-danger"></span>
                        </div>
                    </div>
                </article>

                <article class="card mb-4">
                    <div class="card-header">
                        <h4 class="card-title mb-0">System User Account Info</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="SystemUserId"></label>
                            <div class="input-group">
                                <select asp-for="SystemUserId" class="select2 form-control" asp-items="ViewBag.SystemUser"></select>
                                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                            </div>
                            <span asp-validation-for="SystemUserId" class="text-danger"></span>
                        </div>
                    </div>
                    
                </article>
                <article class="card mb-4">
                    <div class="card-header">
                        <a href="/@controller/Index" class="btn btn-default">Back</a>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </article>
            </form>
        </div>
    </div>
</div>
<!-- Content End -->

@section Styles{

}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


